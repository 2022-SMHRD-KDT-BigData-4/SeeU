<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.board.test.mapper.CommentMapper">

	<select id="CommentList" resultType="com.board.test.domain.Comment">
		select * from tbl_comment
	</select>
	
	<insert id="CommentwriteAction" parameterType="com.board.test.domain.Comment">
		insert into tbl_comment(c_content,c_date,mem_id)
		values (#{param},now(),"jh" )
		where b_num = {b_num}
	</insert>
	<delete id="Commentdelete" parameterType="int">
		delete * from tbl_comment where c_num =${c_num}
	</delete>

	


</mapper>
